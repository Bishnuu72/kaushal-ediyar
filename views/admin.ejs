<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Admin - <%= owner.name %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;800&display=swap" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
  <style>
    body { background: linear-gradient(135deg, #f0f2f5, #e0e7ff); font-family: 'Poppins', sans-serif; min-height: 100vh; }
    .navbar { background: linear-gradient(135deg, #667eea, #764ba2); }
    .profile-card { background: linear-gradient(135deg, #667eea, #764ba2); color: white; border-radius: 25px; }
    .profile-img { width: 160px; height: 160px; object-fit: cover; border: 8px solid rgba(255,255,255,0.3); }
    .card { border-radius: 20px; overflow: hidden; transition: all 0.4s; cursor: grab; }
    .card:hover { transform: translateY(-12px); box-shadow: 0 25px 50px rgba(0,0,0,0.2); }
    .btn-gradient { background: linear-gradient(135deg, #667eea, #764ba2); border: none; color: white; }
    .product-img { height: 240px; object-fit: cover; }
  </style>
</head>
<body>

  <nav class="navbar navbar-dark py-4 shadow-lg">
    <div class="container d-flex justify-content-between">
      <h2 class="fw-bold"><i class="bi bi-speedometer2"></i> Admin Panel</h2>
      <div>
        <span class="me-4 text-white fw-bold">Hello, <%= owner.name %></span>
        <a href="/logout" class="btn btn-outline-light rounded-pill px-5">Logout</a>
      </div>
    </div>
  </nav>

  <div class="container my-5">

    <!-- Update Profile -->
    <div class="profile-card shadow-lg p-5 mb-5">
      <div class="row align-items-center">
        <div class="col-md-4 text-center">
          <img src="<%= owner.photo %>" class="rounded-circle profile-img shadow-lg" alt="Profile">
        </div>
        <div class="col-md-8">
          <h3 class="fw-bold mb-4">Update Profile & Hero Background</h3>
          <form method="POST" action="/admin/update-profile" enctype="multipart/form-data" class="row g-4">
            <div class="col-md-6"><input name="name" value="<%= owner.name %>" class="form-control form-control-lg" required></div>
            <div class="col-md-6"><input name="tagline" value="<%= owner.tagline %>" class="form-control form-control-lg" placeholder="Tagline (e.g. Distributor of Azul Products)"></div>
            <div class="col-md-6"><input name="email" value="<%= owner.email %>" class="form-control form-control-lg" required></div>
            <div class="col-md-6"><input name="phone" value="<%= owner.phone %>" class="form-control form-control-lg" required></div>
            <div class="col-12"><input name="address" value="<%= owner.address %>" class="form-control form-control-lg" required></div>
            <div class="col-md-6">
              <label class="text-white fw-bold">Profile Photo</label>
              <input type="file" name="photo" class="form-control form-control-lg" accept="image/*">
            </div>
            <div class="col-md-6">
              <label class="text-white fw-bold">Hero Background</label>
              <input type="file" name="heroBg" class="form-control form-control-lg" accept="image/*">
              <img src="<%= owner.heroBg %>" class="img-fluid rounded mt-2" style="max-height:150px;">
            </div>
            <div class="col-12">
              <button class="btn btn-light btn-lg px-5 rounded-pill shadow">
                <i class="bi bi-check-circle-fill"></i> Update Everything
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Add Product -->
    <div class="card shadow-lg p-5 mb-5">
      <h3 class="text-primary fw-bold mb-4">Add New Product</h3>
      <form method="POST" action="/admin/add" enctype="multipart/form-data" class="row g-4">
        <div class="col-md-6"><input name="name" class="form-control form-control-lg" placeholder="Product Name" required></div>
        <div class="col-md-6"><input name="price" type="number" step="0.01" class="form-control form-control-lg" placeholder="Price (Rs)" required></div>
        <div class="col-12"><textarea name="description" rows="4" class="form-control form-control-lg" placeholder="Description" required></textarea></div>
        <div class="col-12"><input type="file" name="image" class="form-control form-control-lg" accept="image/*" required></div>
        <div class="col-12">
          <button class="btn btn-gradient btn-lg px-5 rounded-pill shadow">
            <i class="bi bi-cloud-upload"></i> Publish Product
          </button>
        </div>
      </form>
    </div>

    <!-- Products (Drag to Reorder) -->
    <h3 class="text-primary fw-bold mb-4">Products (<%= products.length %>) â€” Drag to Reorder</h3>
    <div class="row g-5">
      <% products.forEach(p => { %>
        <div class="col-md-6 col-lg-4" data-id="<%= p._id %>">
          <div class="card h-100 shadow-lg">
            <img src="<%= p.image %>" class="product-img card-img-top">
            <div class="card-body d-flex flex-column p-4">
              <h5 class="fw-bold text-primary"><%= p.name %></h5>
              <p class="text-muted flex-grow-1"><%= p.description %></p>
              <h4 class="text-success fw-bold">Rs <%= Number(p.price).toFixed(2) %></h4>
              <div class="mt-3 d-grid gap-2">
                <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#edit<%= p._id %>">Edit</button>
                <form method="POST" action="/admin/delete/<%= p._id %>" class="d-inline">
                  <button type="submit" class="btn btn-danger" onclick="return confirm('Delete forever?')">Delete</button>
                </form>
              </div>
            </div>
          </div>

          <!-- Edit Modal -->
          <div class="modal fade" id="edit<%= p._id %>">
            <div class="modal-dialog modal-lg">
              <div class="modal-content">
                <form method="POST" action="/admin/update/<%= p._id %>" enctype="multipart/form-data">
                  <div class="modal-header bg-primary text-white">
                    <h5>Edit Product</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                  </div>
                  <div class="modal-body">
                    <input name="name" value="<%= p.name %>" class="form-control mb-3" required>
                    <input name="price" value="<%= p.price %>" type="number" step="0.01" class="form-control mb-3" required>
                    <textarea name="description" rows="4" class="form-control mb-3"><%= p.description %></textarea>
                    <input type="file" name="image" class="form-control" accept="image/*">
                    <img src="<%= p.image %>" width="200" class="mt-3 rounded">
                  </div>
                  <div class="modal-footer">
                    <button type="submit" class="btn btn-gradient">Update</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    new Sortable(document.querySelector('.row.g-5'), {
      animation: 350,
      onEnd: async () => {
        const order = Array.from(document.querySelectorAll('[data-id]')).map(el => el.dataset.id);
        await fetch('/admin/reorder', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ order })
        });
      }
    });
  </script>
</body>
</html>